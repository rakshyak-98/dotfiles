# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "memory"
order += "disk /"
order += "battery all"
# order += "load"
order += "tztime local"

memory {
        format = "%used/%total"
        unit = "Gi"
        color_bad = "#FF0000"      # Red for high memory usage
        color_degraded = "#FFFF00"  # Yellow for medium memory usage
        color_good = "#00FF00"      # Green for low memory usage
}

battery all {
        format = "%status %percentage %remaining"
        low_threshold = 30
        threshold_type = percentage
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

disk "/" {
        format = "%avail"
}

