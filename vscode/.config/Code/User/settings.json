// vim resource : https://dev.to/ansonh/10-vs-code-vim-tricks-to-boost-your-productivity-1b0n#2-cursor-surrounding-lines
{
    "workbench.editor.showTabs": "none",
    "workbench.tree.enableStickyScroll": false,
    "editor.selectionHighlight": false,
    "editor.occurrencesHighlight": "off",
    "editor.stickyScroll.scrollWithEditor": false,
    "editor.lineNumbers": "relative",
    "editor.stickyScroll.enabled": false,
    "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
    "editor.quickSuggestions": {
        "other": "inline"
    },
    // formatter
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // vim configurations
    "vim.leader": "<space>",
    "vim.incsearch": true,
    "vim.surround": true,
    "vim.smartRelativeLine": true,
    "vim.hlsearch": false,
    "vim.useSystemClipboard": true,
    "vim.foldfix": true,
    "vim.shell": "/usr/bin/zsh",
    "vim.statusBarColors.commandlineinprogress": "#007ACC",
    "vim.statusBarColors.searchinprogressmode": "#007ACC",
    "vim.statusBarColors.easymotionmode": "#007ACC",
    "vim.statusBarColors.easymotioninputmode": "#007ACC",
    "vim.statusBarColors.surroundinputmode": "#007ACC",
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "<leader>",
                "c",
                "c"
            ],
            "commands": [
                "workbench.files.action.compareWithClipboard"
            ]
        },
        // LSP keybindings
        {
            "before": [
                "g",
                "p",
                "d"
            ],
            "commands": [
                "editor.action.peekDefinition"
            ]
        },
        {
            "before": [
                "g",
                "i"
            ],
            "commands": [
                "editor.action.goToImplementation"
            ]
        },
        {
            "before": [
                "g",
                "p",
                "i"
            ],
            "commands": [
                "editor.action.peekImplementation"
            ]
        },
        {
            "before": [
                "g",
                "q"
            ],
            "commands": [
                "editor.action.quickFix"
            ]
        },
        {
            "before": [
                "g",
                "r"
            ],
            "commands": [
                "editor.action.referenceSearch.trigger"
            ]
        },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "commands": [
                "editor.action.marker.prev"
            ],
            "before": [
                "c",
                "p"
            ]
        },
        {
            "commands": [
                "editor.action.marker.next"
            ],
            "before": [
                "c",
                "n"
            ]
        },
        {
            "commands": [
                "workbench.files.action.focusFilesExplorer"
            ],
            "before": [
                "<leader>",
                "p",
                "v"
            ]
        },
        {
            "commands": [
                "workbench.action.quickOpen"
            ],
            "when": [
                "!workbench.action.terminal.focus"
            ],
            "before": [
                "<leader>",
                "p",
                "f"
            ]
        },
        {
            "commands": [
                "workbench.action.splitEditorDown"
            ],
            "before": [
                "<C-w>",
                "<C-v>"
            ]
        },
        {
            "commands": [
                "workbench.action.splitEditorLeft"
            ],
            "before": [
                "<C-w>",
                "<C-h>"
            ]
        },
        {
            "commands": [
                "workbench.action.files.save"
            ],
            "before": [
                "<leader>",
                "<leader>"
            ],
        },
        {
            "before": [
                "n"
            ],
            "after": [
                "n",
                "zz"
            ]
        },
        {
            "before": [
                "N"
            ],
            "after": [
                "N",
                "zz"
            ]
        },
        {
            "before": [
                "<S>",
                "%"
            ],
            "after": [
                "\\"
            ]
        },
        {
            "before": [
                "K"
            ],
            "commands": [
                "editor.action.showHover"
            ]
        },
        {
            "before": [
                "<leader>",
                "d",
                "c"
            ],
            "commands": [
                "workbench.action.debug.continue"
            ],
            "when": [
                "inDebugMode"
            ],
            "silent": true
        },
        {
            "before": [
                "<leader>",
                "d",
                "o"
            ],
            "commands": [
                "workbench.action.debug.stepOver"
            ],
            "silent": true
        },
        {
            "before": [
                "<leader>",
                "d",
                "O"
            ],
            "commands": [
                "workbench.action.debug.stepOut"
            ],
            "silent": true
        },
        {
            "before": [
                "<leader>",
                "d",
                "i"
            ],
            "commands": [
                "workbench.action.debug.stepInto"
            ],
            "silent": true
        },
        {
            "before": [
                "f",
                "f"
            ],
            "commands": [
                "editor.action.formatDocument"
            ],
            "when": [
                "editorHasDocumentFormattingProvider && editorTextFocus && !editorReadonly && !inCompositeEditor"
            ],
            "silent": true,
        },
        {
            "before": [
                "<leader>",
                "o",
                "f"
            ],
            "commands": [
                "workbench.action.files.showOpenedFileInNewWindow"
            ]
        },
        {
            "before": [
                "z",
                "O"
            ],
            "commands": [
                "editor.unfoldAll"
            ]
        },
        {
            "before": [
                "z",
                "C"
            ],
            "commands": [
                "editor.foldAll"
            ]
        },
        // vim_git
        {
            "before": [
                "<leader>",
                "g",
                "c",
                "c"
            ],
            "commands": [
                "git.openChange"
            ],
            "silent": true,
        },
        {
            "before": [
                "<leader>",
                "d",
                "s"
            ],
            "commands": [
                "workbench.action.debug.stop"
            ]
        },
        {
            "before": [
                "<leader>",
                "d",
                "d"
            ],
            "commands": [
                "workbench.action.debug.start"
            ]
        },
        {
            "before": [
                "<leader>",
                "d",
                "r"
            ],
            "commands": [
                "workbench.action.debug.restart"
            ],
            "when": [
                "inDebugMode"
            ]
        },
        {
            "commands": [
                "workbench.action.nextEditorInGroup"
            ],
            "before": [
                "]"
            ],
            "silent": true
        },
        {
            "commands": [
                "workbench.action.previousEditorInGroup"
            ],
            "before": [
                "["
            ],
            "silent": true
        },
        {
            "commands": [
                "cody.mention.selection"
            ],
            "before": [
                "<leader>",
                "x"
            ],
            "silent": true
        },
        {
            "commands": [
                "editor.debug.action.toggleBreakpoint"
            ],
            "before": [
                "<leader>",
                "b"
            ],
            "when": [
                "debuggersAvailable && disassemblyViewFocus || debuggersAvailable && editorTextFocus"
            ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "commands": [
                "cody.command.explain-code"
            ],
            "before": [
                "<leader>",
                "x"
            ],
            "silent": true
        },
        {
            "before": [
                "p",
            ],
            "after": [
                "p",
                "g",
                "v",
                "y"
            ]
        },
        // vim_visual
        {
            "before": [
                "p"
            ],
            "after": [
                "p",
                "g",
                "v",
                "y"
            ]
        },
        {
            "before": [
                "<leader>",
                "r",
                "r"
            ],
            "commands": [
                "editor.action.rename"
            ]
        },
        {
            "before": [
                "K"
            ],
            "commands": [
                "editor.action.moveLinesDownAction"
            ]
        },
        {
            "before": [
                "J"
            ],
            "commands": [
                "editor.action.moveLinesUpAction"
            ]
        },
        {
            "commands": [
                "git.revertSelectedRanges"
            ],
            "before": [
                "<leader>",
                "g",
                "r"
            ],
            "when": [
                "isInDiffEditor && !operationInProgress"
            ]
        }
    ],
    "vim.handleKeys": {
        "<C-k>": false,
        "<C-b>": false,
        "<C-f>": false,
    },
    //terminal
    "terminal.integrated.defaultProfile.linux": "zsh",
    // mis
    "merge-conflict.diffViewPosition": "Beside",
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    "debug.toolBarLocation": "docked",
    "html.hover.references": false,
    "git.openRepositoryInParentFolders": "always",
    "git.autofetch": true,
    "accessibility.signals.terminalBell": {
        "sound": "off",
        "announcement": "off"
    },
    "files.trimTrailingWhitespace": true,
    "workbench.sideBar.location": "right",
    "workbench.tree.indent": 12,
    "markdown.math.enabled": false,
    "cSpell.ignoreRegExpList": [
        "settings.json"
    ],
    "terminal.integrated.tabs.enabled": false,
    "prettier.printWidth": 100,
    "prettier.endOfLine": "lf",
    "window.commandCenter": false,
    "workbench.editor.editorActionsLocation": "hidden",
    "prettier.tabWidth": 4,
    "prettier.useTabs": true,
    "explorer.confirmDelete": false,
    "editor.cursorBlinking": "solid",
    "editor.cursorSurroundingLines": 2,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "breadcrumbs.icons": false,
    "editor.fontWeight": "100",
    "terminal.integrated.fontWeight": "100",
    "terminal.integrated.fontSize": 12,
    "extensions.ignoreRecommendations": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "cSpell.userWords": [
        "afplay",
        "bencode",
        "Catppuccin",
        "clsx",
        "deque",
        "foldfix",
        "grayscale",
        "gsap",
        "hlsearch",
        "imagehandler",
        "incsearch",
        "inital",
        "leaderboard",
        "Lusitana",
        "mozwebkit",
        "Parens",
        "Picsum",
        "reduxjs",
        "resave",
        "stackoverflow",
        "tailwindcss",
        "torrentfile",
        "Upgrader",
        "viewsets"
    ],
    "files.autoSaveWhenNoErrors": true,
    "window.customTitleBarVisibility": "auto",
    "workbench.layoutControl.enabled": false,
    "window.menuBarVisibility": "toggle",
    "editor.quickSuggestionsDelay": 100,
    "editor.screenReaderAnnounceInlineSuggestion": false,
    "editor.suggest.filterGraceful": false,
    "editor.snippetSuggestions": "none",
    "editor.suggest.showDeprecated": false,
    "editor.suggest.showWords": false,
    "editor.suggest.showUsers": false,
    "editor.suggest.showSnippets": false,
    "files.autoSaveWorkspaceFilesOnly": true,
    "files.eol": "\n",
    "cody.commandCodeLenses": false,
    "cody.commandHints.enabled": false,
    "cody.codeActions.enabled": true,
    "editor.wordBasedSuggestions": "currentDocument",
    "javascript.suggestionActions.enabled": false,
    "typescript.suggestionActions.enabled": false,
    "editor.suggestSelection": "recentlyUsedByPrefix",
    "javascript.suggest.autoImports": false,
    "workbench.editor.dragToOpenWindow": false,
    "workbench.editor.enablePreview": false,
    "editor.autoClosingComments": "never",
    "debug.console.fontSize": 11.5,
    "css.format.spaceAroundSelectorSeparator": true,
    "css.lint.universalSelector": "warning",
    "css.lint.unknownAtRules": "ignore",
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "editor.linkedEditing": true,
    "editor.unicodeHighlight.includeComments": true,
    "workbench.colorCustomizations": {
        "[Default Dark Modern]": {
            "tab.activeBorderTop": "#00FF00",
            "tab.unfocusedActiveBorderTop": "#00FF0088",
            "textCodeBlock.background": "#00000055"
        },
        "editor.wordHighlightStrongBorder": "#FF6347",
        "editor.wordHighlightBorder": "#FFD700",
        "editor.selectionHighlightBorder": "#A9A9A9"
    },
    "workbench.editor.revealIfOpen": true,
    "emmet.variables": {
        "lang": "en"
    },
    "cSpell.diagnosticLevel": "Hint",
    "terminal.integrated.tabs.hideCondition": "never",
    "terminal.integrated.enablePersistentSessions": false,
    "files.trimFinalNewlines": true,
    "editor.inlineSuggest.suppressSuggestions": true,
    "editor.fontFamily": "'JetBrains Mono', 'Droid Sans Mono', 'monospace', monospace",
    "editor.fontSize": 14,
    "workbench.colorTheme": "Gatito Theme",
    "diffEditor.ignoreTrimWhitespace": false,
    "workbench.editor.enablePreviewFromCodeNavigation": true,
    "cody.chat.defaultLocation": "editor",
    "cody.autocomplete.enabled": true,
    "window.zoomPerWindow": false,
    "terminal.integrated.cursorStyle": "block",
    "editor.minimap.enabled": false,
    "editor.rulers": [
        80,
    ],
    "editor.formatOnSaveMode": "modifications",
    "go.showWelcome": false,
    "editor.wordWrap": "bounded",
    "autoimport.autoComplete": false,
    "workbench.startupEditor": "none",
    "[dockercompose]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    "workbench.activityBar.location": "hidden",
}
