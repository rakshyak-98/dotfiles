        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // vim configurations
    "vim.leader": "<space>",
    "vim.incsearch": true,
    "vim.surround": true,
    "vim.smartRelativeLine": true,
    "vim.hlsearch": false,
    "vim.useSystemClipboard": true,
    "vim.foldfix": true,
    "vim.autoindent": true,
    "vim.inccommand": "replace",
    "vim.shell": "/bin/bash",
    // "vim.whichwrap": "h,l,<,>",
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "<leader>",
                "c",
                "c"
            ],
            "commands": [
                "workbench.files.action.compareWithClipboard"
            ]
        },
        // LSP keybindings
        {
            "before": [
                "g",
                "p",
                "d"
            ],
            "commands": [
                "editor.action.peekDefinition"
            ]
        },
        {
            "before": [
                "g",
                "i"
            ],
            "commands": [
                "editor.action.goToImplementation"
            ]
        },
        {
            "before": [
                "g",
                "p",
                "i"
            ],
            "commands": [
                "editor.action.peekImplementation"
            ]
        },
        {
            "before": [
                "q",
                "f"
            ],
            "commands": [
                "editor.action.quickFix"
            ]
        },
        {
            "before": [
                "g",
                "r"
            ],
            "commands": [
                "editor.action.referenceSearch.trigger"
            ]
        },
        {
            "before": [
                "<leader>",
                "d",
                "d"
            ],
            "commands": [
                "workbench.action.debug.start"
            ]
        },
        {
            "before": [
                "<leader>",
                "d",
                "s"
            ],
            "commands": [
                "workbench.action.debug.stop"
            ]
        },
        {
            "before": [
                "<leader>",
                "d",
                "r"
            ],
            "commands": [
                "workbench.action.debug.restart"
            ],
        },
        {
            "before": [
                "<leader>",
                "c"
            ],
            "commands": [
                "workbench.action.debug.continue"
            ],
            "when": [
                "inDebugMode"
            ],
            "silent": true
        },
        {
            "before": [
                "<leader>",
                "o"
            ],
            "commands": [
                "workbench.action.debug.stepOver"
            ],
            "when": [
                "inDebugMode"
            ],
            "silent": true
        },
        {
            "before": [
                "<leader>",
                "O"
            ],
            "when": [
                "inDebugMode"
            ],
            "commands": [
                "workbench.action.debug.stepOut"
            ],
            "silent": true
        },
        {
            "before": [
                "<leader>",
                "i"
            ],
            "when": [
                "inDebugMode"
            ],
            "commands": [
                "workbench.action.debug.stepInto"
            ],
            "silent": true
        },
        {
            "commands": [
                "workbench.action.openWorkspace",
            ],
            "before": [
                "leader",
                "w"
            ]
        },
        {
            "before": [
                "<C-h>"
            ],
            "after": [
                "<C-w>",
                "<C-h>"
            ]
        },
        {
            "before": [
                "<C-l>"
            ],
            "after": [
                "<C-w>",
                "<C-l>"
            ]
        },
        {
            "before": [
                "<C-j>"
            ],
            "after": [
                "<C-w>",
                "<C-j>"
            ]
        },
        {
            "before": [
                "<C-k>"
            ],
            "after": [
                "<C-w>",
                "<C-k>"
            ]
        },
        {
            "commands": [
                "workbench.action.quickOpen"
            ],
            "when": [
                "!workbench.action.terminal.focus"
            ],
            "before": [
                "<leader>",
                "<leader>"
            ]
        },
        {
            "commands": [
                "workbench.action.splitEditorUp"
            ],
            "before": [
                "<C-w>",
                "k"
            ]
        },
        {
            "commands": [
                "workbench.action.splitEditorLeft"
            ],
            "before": [
                "<C-w>",
                "l"
            ]
        },
        {
            "commands": [
                "workbench.action.splitEditorRight"
            ],
            "before": [
                "<C-w>",
                "h"
            ]
        },
{
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "g", "r"], // Revert hunk
      "commands": ["git.revertSelectedRanges"]
    }
  ]
},


    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "commands": [
                "editor.action.marker.prev"
            ],
            "before": [
                "c",
                "p"
            ]
        },
        {
            "commands": [
                "workbench.action.nextEditorInGroup"
            ],
            "before": [
                "["
            ],
            "silent": true
        },
        {
            "commands": [
                "workbench.action.previousEditorInGroup"
            ],
            "before": [
                "]"
            ],
            "silent": true
        },
        {
            "commands": [
                "editor.action.marker.next"
            ],
            "before": [
                "c",
                "n"
            ]
        },
        {
            "commands": [
                "workbench.files.action.focusFilesExplorer"
            ],
            "before": [
                "<leader>",
                "p",
                "v"
            ]
        },
        {
            "before": [
                "n"
            ],
            "after": [
                "n",
                "zz"
            ]
        },
        {
            "before": [
                "N"
            ],
            "after": [
                "N",
                "zz"
            ]
        },
        {
            "before": [
                "<S>",
                "%"
            ],
            "after": [
                "\\"
            ]
        },
        {
            "before": [
                "K"
            ],
            "commands": [
                "editor.action.showHover"
            ]
        },
        {
            "before": [
                "f",
                "f"
            ],
            "commands": [
                "editor.action.formatDocument"
            ],
            "when": [
                "editorHasDocumentFormattingProvider && editorTextFocus && !editorReadonly && !inCompositeEditor"
            ],
            "silent": true,
        },
        {
            "before": [
                "<leader>",
                "o",
                "f"
            ],
            "commands": [
                "workbench.action.files.showOpenedFileInNewWindow"
            ]
        },
        {
            "before": [
                "z",
                "O"
            ],
            "commands": [
                "editor.unfoldAll"
            ]
        },
        {
            "before": [
                "z",
                "C"
            ],
            "commands": [
                "editor.foldAll"
            ]
        },
        // vim_git
        {
            "before": [
                "<leader>",
                "g",
                "c",
                "c"
            ],
            "commands": [
                "git.openChange"
            ],
            "silent": true,
        },
        {
            "commands": [
                "cody.mention.selection"
            ],
            "before": [
                "<leader>",
                "x"
            ],
            "silent": true
        },
        {
            "commands": [
                "editor.debug.action.toggleBreakpoint"
            ],
            "before": [
                "<leader>",
                "s",
                "b"
            ],
            "when": [
                "debuggersAvailable && disassemblyViewFocus || debuggersAvailable && editorTextFocus"
            ]
        },
        {
            "before": [
                "<leader>",
                "s",
                "g"
            ],
            "commands": [
                "comfy-live-grep.grep-files"
            ]
        },
{
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "g", "p"], // Peek Git diff for the changed line
      "commands": ["editor.action.dirtydiff.next"]
    }
  ]
},
{
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "g", "j"], // Jump to next Git change
      "commands": ["workbench.action.editor.nextChange"]
    },
    {
      "before": ["<leader>", "g", "k"], // Jump to previous Git change
      "commands": ["workbench.action.editor.previousChange"]
    }
  ]
},

    ],
